# Database
DATABASE_URL="file:./dev.db"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-change-in-production"

# Admin (set these after first run)
ADMIN_USERNAME="admin"
ADMIN_PASSWORD="changeme"

# Admin Setup Protection
# Set ALLOW_ADMIN_SETUP=true to enable admin account creation via /api/admin/setup
# Set ADMIN_SETUP_TOKEN for additional security (optional but recommended)
ALLOW_ADMIN_SETUP="false"
ADMIN_SETUP_TOKEN="generate-random-token-here"

# Email Notifications (Resend)
# Get your API key from https://resend.com/api-keys
RESEND_API_KEY="re_your_api_key_here"
# Email address to send notifications FROM (must be verified in Resend)
# For testing, you can use onboarding@resend.dev
# For production, use your own domain (e.g., noreply@sakshammahajan.com)
RESEND_FROM_EMAIL="onboarding@resend.dev"
# Email address to receive notifications TO
ADMIN_EMAIL="your-email@example.com"

# Chatbot (required for chatbot functionality)
GEMINI_API_KEY="your_gemini_api_key_here"
